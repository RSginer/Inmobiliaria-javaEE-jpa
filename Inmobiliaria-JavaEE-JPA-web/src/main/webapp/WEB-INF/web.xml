<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.inmobiliaria.controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ComprobarPagosService</servlet-name>
        <servlet-class>com.inmobiliaria.services.ComprobarPagosService</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EnviarEmailService</servlet-name>
        <servlet-class>com.inmobiliaria.services.EnviarEmailService</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViviendaController</servlet-name>
        <servlet-class>com.inmobiliaria.controllers.viviendas.ViviendaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CerrarSesion</servlet-name>
        <servlet-class>com.inmobiliaria.controllers.CerrarSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClienteController</servlet-name>
        <servlet-class>com.inmobiliaria.controllers.clientes.ClienteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PanelControllController</servlet-name>
        <servlet-class>com.inmobiliaria.controllers.PanelControllController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/app/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ComprobarPagosService</servlet-name>
        <url-pattern>/app/ComprobarPagosService</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EnviarEmailService</servlet-name>
        <url-pattern>/app/EnviarEmailService</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViviendaController</servlet-name>
        <url-pattern>/app/ListaViviendasController</url-pattern>
        <url-pattern>/app/Vivienda/editar</url-pattern>
        <url-pattern>/app/Vivienda/modificar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CerrarSesion</servlet-name>
        <url-pattern>/app/CerrarSesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClienteController</servlet-name>
        <url-pattern>/app/Cliente/editar</url-pattern>
        <url-pattern>/app/Cliente/modificar</url-pattern>
        <url-pattern>/app/ListaClientesController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PanelControllController</servlet-name>
        <url-pattern>/PanelControllController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
